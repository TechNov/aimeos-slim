{
	"name": "aimeos/aimeos-slim",
	"description": "Slim online shop package and e-commerce solution for high performance shops",
	"homepage": "https://aimeos.org/SlimPHP",
	"type": "library",
	"license": "LGPLv3",
	"keywords": ["aimeos", "slim", "e-commerce", "ecommerce", "shop", "portal", "market place"],
	"support": {
		"source": "https://github.com/Aimeos/aimeos-slim",
		"issues": "https://github.com/Aimeos/aimeos-slim/issues",
		"forum": "https://aimeos.org/help",
		"wiki": "https://aimeos.org/docs"
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/aimeos/php-coveralls"
		}
	],
	"prefer-stable": true,
	"minimum-stability": "dev",
	"require": {
		"php": ">=5.3.3",
		"aimeos/aimeos-core": "2017.04.*",
		"aimeos/ai-admin-extadm": "2017.04.*",
		"aimeos/ai-admin-jqadm": "2017.04.*",
		"aimeos/ai-admin-jsonadm": "2017.04.*",
		"aimeos/ai-client-html": "2017.04.*",
		"aimeos/ai-client-jsonapi": "2017.04.*",
		"aimeos/ai-controller-jobs": "2017.04.*",
		"aimeos/ai-gettext": "2017.04.*",
		"aimeos/ai-monolog": "2017.04.*",
		"aimeos/ai-swiftmailer": "2017.04.*.*",
		"aimeos/ai-slim": "2017.04.*",
		"aimeos/ai-twig": "2017.04.*",
		"slim/twig-view": "~2.0",
		"slim/slim": "~3.3"
	},
	"require-dev": {
		"satooshi/php-coveralls": "dev-master",
		"phpunit/phpunit": "~4.0||~5.0"
	},
	"autoload": {
		"psr-4": { "Aimeos\\Slim\\": "src/" }
	}
}
